<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal">

    <Button
        android:id="@+id/startWifiDirect"
        android:onClick="onClick"
        android:text="startWifi"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/stopWifiDirect"
        android:onClick="onClick"
        android:text="stopWifi"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/startBT"
        android:onClick="onClick"
        android:text="startBT"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/stopBT"
        android:onClick="onClick"
        android:text="stopBT"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/startDiscoverable"
        android:onClick="onClick"
        android:text="startDiscoverable"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/startDiscovery"
        android:onClick="onClick"
        android:text="startDiscovery"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/startDiscoverableAndDiscovery"
        android:onClick="onClick"
        android:text="startBT_D_And_D"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/nothing"
        android:onClick="onClick"
        android:text="nothing"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/setupCleanASAPStorageButton"
        android:onClick="onSetupCleanASAPStorageClick"
        android:text="setupASAPStorage"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/addASAPMessageButton"
        android:onClick="onAddASAPMessageClick"
        android:text="add message"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/addOnlineSenderButton"
        android:onClick="onAddOnlineSenderClick"
        android:text="add online msg"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/removeOnlineSenderButton"
        android:onClick="onRemoveAddOnlineSenderClick"
        android:text="remove online msg"
        android:layout_gravity="left|top" />

</GridLayout>

